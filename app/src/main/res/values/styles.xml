<!-- A Style specifies the appearance of Views, it defines the attributes' values such as width, height,
color, background and so on, to be applied to Views. Whereas, Themes are used to group a set of styles
to be applied on the whole application or an individual Activity. -->
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <!-- App branding color for the app bar -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Darker variant for the status bar and contextual app bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Color applies to UI controls such as EditText, Checkbox -->
        <item name="colorAccent">@color/colorAccent</item>

        <!-- <item name="android:textColor">@android:color/primary_text_light</item> -->
    </style>

    <style name="something">
        <item name="android:textColor">#0000FF</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.SimpleCoordinatorTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <!-- Toolbar -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- GridLayout demo cell styles -->
    <style name="CellText">
        <item name="android:background">@drawable/cell</item>
        <item name="android:padding">4dp</item>
    </style>
    <!-- Using a '.' to denote for inheritance. -->
    <style name="CellText.Normal">

    </style>

    <style name="CellText.PublicHoliday">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FF0000</item>
    </style>

    <style name="CellText.SchoolHoliday">
        <item name="android:background">@drawable/cell_school_holiday</item>
    </style>

    <style name="CellText.PublicHoliday.Both">
        <item name="android:background">@drawable/cell_school_holiday</item>
    </style>

</resources>
